// 自動的に各物件フォルダから写真を読み込む関数
function getPropertyImages(propertyId: number): string[] {
	const folderPath = path.join(process.cwd(), 'public', 'properties', `property-${propertyId}`);
	
	// フォルダが存在しない場合は空配列を返す
	if (!fs.existsSync(folderPath)) {
		return [];
	}
	
	// フォルダ内の画像ファイルを取得
	const files = fs.readdirSync(folderPath)
		.filter(file => /\.(jpg|jpeg|png|webp)$/i.test(file))
		.sort((a, b) => {
			// photo-1.jpg, photo-2.jpg のような順序でソート
			const numA = parseInt(a.match(/\d+/)?.[0] || '0');
			const numB = parseInt(b.match(/\d+/)?.[0] || '0');
			return numA - numB;
		})
		.map(file => `/properties/property-${propertyId}/${file}`);
	
	return files;
}

